import React, { useState } from "react";

function LibraryApp() {
  // Initial books
  const [books, setBooks] = useState([
    { id: 1, title: "The Alchemist", author: "Paulo Coelho" },
    { id: 2, title: "Atomic Habits", author: "James Clear" },
    { id: 3, title: "Rich Dad Poor Dad", author: "Robert Kiyosaki" },
  ]);

  const [search, setSearch] = useState("");
  const [newTitle, setNewTitle] = useState("");
  const [newAuthor, setNewAuthor] = useState("");

  // Add a new book
  const addBook = () => {
    if (newTitle.trim() === "" || newAuthor.trim() === "") return;
    const newBook = {
      id: Date.now(),
      title: newTitle,
      author: newAuthor,
    };
    setBooks([...books, newBook]);
    setNewTitle("");
    setNewAuthor("");
  };

  // Remove a book
  const removeBook = (id) => {
    setBooks(books.filter((book) => book.id !== id));
  };

  // Filtered books based on search
  const filteredBooks = books.filter((book) =>
    book.title.toLowerCase().includes(search.toLowerCase())
  );

  return (
    <div className="min-h-screen bg-gray-100 p-6">
      <h1 className="text-3xl font-bold text-center mb-6">ðŸ“š Library Management</h1>

      {/* Search Bar */}
      <div className="flex justify-center mb-6">
        <input
          type="text"
          placeholder="Search by title..."
          value={search}
          onChange={(e) => setSearch(e.target.value)}
          className="px-4 py-2 border rounded-lg w-1/2"
        />
      </div>

      {/* Add New Book */}
      <div className="flex justify-center gap-3 mb-6">
        <input
          type="text"
          placeholder="Book Title"
          value={newTitle}
          onChange={(e) => setNewTitle(e.target.value)}
          className="px-4 py-2 border rounded-lg"
        />
        <input
          type="text"
          placeholder="Author"
          value={newAuthor}
          onChange={(e) => setNewAuthor(e.target.value)}
          className="px-4 py-2 border rounded-lg"
        />
        <button
          onClick={addBook}
          className="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700"
        >
          Add Book
        </button>
      </div>

      {/* Book List */}
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {filteredBooks.length > 0 ? (
          filteredBooks.map((book) => (
            <div
              key={book.id}
              className="p-4 bg-white rounded-xl shadow-md flex justify-between items-center"
            >
              <div>
                <h2 className="text-lg font-bold">{book.title}</h2>
                <p className="text-gray-600">by {book.author}</p>
              </div>
              <button
                onClick={() => removeBook(book.id)}
                className="px-3 py-1 bg-red-500 text-white rounded-lg hover:bg-red-600"
              >
                Remove
              </button>
            </div>
          ))
        ) : (
          <p className="text-center text-gray-500 col-span-3">
            No books found.
          </p>
        )}
      </div>
    </div>
  );
}

export default LibraryApp;
